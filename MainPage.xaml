<Page x:Class="UwpCards.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="using:UwpCards"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First List -->
            <ListView Grid.Row="0"
                      ItemsSource="{x:Bind FirstCards}"
                      CanDragItems="True"
                      CanReorderItems="True"
                      AllowDrop="True"
                      Margin="0,0,0,20"
                      DragItemsStarting="ListView_DragItemsStarting"
                      DragOver="ListView_DragOver"
                      Drop="ListView_Drop">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:CardItem">
                        <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                CornerRadius="8"
                                Margin="4"
                                Width="300"
                                Height="150">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{x:Bind ImageUrl}"
                                       Grid.Column="1"
                                       Stretch="Uniform"
                                       Width="100"
                                       Height="150"/>

                                <StackPanel Grid.Column="0"
                                            Margin="10"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Title}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{x:Bind Description}"
                                               TextWrapping="WrapWholeWords"
                                               FontSize="12"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,0,10"/>

                                    <Button Content="Action"
                                            Click="ActionButton_Click"
                                            HorizontalAlignment="Stretch"
                                            Padding="8,4"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Second List -->
            <ListView Grid.Row="1"
                      ItemsSource="{x:Bind SecondCards}"
                      CanDragItems="True"
                      CanReorderItems="True"
                      AllowDrop="True"
                      Margin="0,20,0,0"
                      DragItemsStarting="ListView_DragItemsStarting"
                      DragOver="ListView_DragOver"
                      Drop="ListView_Drop">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:CardItem">
                        <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                                CornerRadius="8"
                                Margin="4"
                                Width="300"
                                Height="150">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{x:Bind ImageUrl}"
                                       Grid.Column="0"
                                       Stretch="Uniform"
                                       Width="100"
                                       Height="150"/>

                                <StackPanel Grid.Column="1"
                                            Margin="10"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Title}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{x:Bind Description}"
                                               TextWrapping="WrapWholeWords"
                                               FontSize="12"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,0,10"/>

                                    <Button Content="Action"
                                            Click="ActionButton_Click"
                                            HorizontalAlignment="Stretch"
                                            Padding="8,4"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>